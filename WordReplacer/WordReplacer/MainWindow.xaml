<Window x:Class="WordReplacer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Button Content="Source" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="75" Click="Source_Click"/>
        <TextBlock x:Name="resultTextBlock" HorizontalAlignment="Stretch" Margin="10,40,10,10" TextWrapping="Wrap" VerticalAlignment="Stretch" />
        <Button Content="Rule" HorizontalAlignment="Left" Margin="90,10,0,0" VerticalAlignment="Top" Width="75" Click="Rule_Click"/>
        <Button Content="Go" HorizontalAlignment="Left" Margin="170,10,0,0" VerticalAlignment="Top" Width="75" Click="Go_Click"/>

    </Grid>
</Window>
